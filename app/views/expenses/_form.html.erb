<%= simple_form_for(@expense) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.collection_select :ExpenseCategory_id, @category, :id, :title, :selected => @expense.ExpenseCategory_id%>
    <%= f.input :description %>
    <%= f.input :cost %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
