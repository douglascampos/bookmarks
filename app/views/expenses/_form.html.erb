<%= simple_form_for(@expense) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.collection_select :ExpenseCategory_id, @category, :id, :title, :selected => @expense.ExpenseCategory_id, :class=>'medium success radius button dropdown'%>
  	<!-- class="[tiny small medium large] [secondary alert success] [radius round] button dropdown" -->
    <%= f.input :description %>
    <%= f.input :cost %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
