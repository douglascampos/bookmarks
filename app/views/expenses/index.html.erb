<h1>Listing Expenses</h1>
<div width="100%" align='right'>
  <%= link_to 'Expenses Categories', expense_category_index_path, :class=>"button radius" %>
</div>

<table width="100%">
  <thead>
    <tr>
      <th>Description</th>
      <th>Cost</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td width="70%"><%= expense.description %></td>
        <td width="10%"><%= expense.cost %></td>
        <td align="center">
          <%= link_to 'Show', expense, :class=>"button tiny" %>
          <%= link_to 'Edit', edit_expense_path(expense), :class=>"button tiny" %>
          <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"button tiny alert" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_path,  :class=>"button radius" %>
